{
  "name": "glt",
  "version": "1.2.1",
  "description": "A command-line interface for GitLab tasks.",
  "main": "src/glt.js",
  "bin": {
    "glt": "./src/glt.js"
  },
  "scripts": {
    "cm": "git-cz",
    "lint": "eslint .",
    "debug": "node --inspect-brk src/glt.js",
    "debug-ci": "node --inspect-brk src/glt-ci.js",
    "debug-ci-cancel": "node --inspect-brk src/glt-ci.js",
    "test": "nyc --reporter=lcov tape test/**.js | tap-spec && nyc report"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/nickshine/glt.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "gitlab",
    "cli"
  ],
  "author": "Nicholas Shine",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/nickshine/glt/issues"
  },
  "homepage": "https://gitlab.com/nickshine/glt#readme",
  "dependencies": {
    "commander": "^3.0.0",
    "gitlab": "^4.4.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.3.0",
    "@semantic-release/exec": "3.3.7",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/gitlab": "4.0.0",
    "@semantic-release/npm": "5.1.15",
    "@semantic-release/release-notes-generator": "7.3.0",
    "clear-require": "3.0.0",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "husky": "3.0.8",
    "nyc": "14.1.1",
    "proxyquire": "2.1.3",
    "semantic-release": "15.13.24",
    "sinon": "7.5.0",
    "tap-spec": "5.0.0",
    "tape-async": "2.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "src"
  ]
}
